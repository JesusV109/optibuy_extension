{
  "manifest_version": 3,
  "name": "OptiBuy Chatbot",
  "version": "1.0",
  "description": "AI-powered shopping assistant powered by OptiBuy and Gemini",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://optibuy.vercel.app/*"] 
}
